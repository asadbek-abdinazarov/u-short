                           th:text="${shortUrl}"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="short-url"></a>
                        <button type="button" class="copy-button" onclick="copyToClipboard()">
                            <i class="fas fa-copy"></i> Copy Link
